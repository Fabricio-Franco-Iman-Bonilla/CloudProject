@if (ViewBag.Producto != null)
{
    <div class="card shadow-lg mb-4">
        <div class="card-header bg-success text-white">
            <h3 class="card-title">Producto Más Vendido</h3>
        </div>
        <div class="card-body">
            <h5 class="card-text">
                <strong>Producto:</strong> @ViewBag.Producto <br />
                <strong>Total Vendido:</strong> @ViewBag.Total
            </h5>
            <div class="mt-4">
                <a asp-action="DescargarPdf" class="btn btn-danger">
                    <i class="bi bi-file-earmark-pdf-fill"></i> Descargar PDF
                </a>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>¡Ups!</strong> No hay datos disponibles sobre el producto más vendido.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="text-center">
    <a asp-action="Index" class="btn btn-lg btn-outline-dark shadow-sm">Volver al reporte</a>
</div>
